<Window x:Class="Zad8_trpo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Zad8_trpo"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
                Background="{DynamicResource WindowBackground}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Menu Grid.Row="0" Background="Transparent" Foreground="{DynamicResource ForegroundBrush}">
            <MenuItem Header="Сменить тему">
                <MenuItem Header="Сменить тему" Click="ChangeTheme_Click" Style="{StaticResource MenuItemForeground}"/>
            </MenuItem>
        </Menu>

        <Frame Name="MainFrame" Grid.Row="1" NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>
