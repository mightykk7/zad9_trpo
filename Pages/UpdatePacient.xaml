<Page x:Class="Zad8_trpo.Pages.UpdatePacient"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Zad8_trpo.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="UpdatePacient">

    <Grid>
        <StackPanel Orientation="Horizontal">
            <StackPanel>
                <Label Content="Имя:"/>
                <Label Content="Фамилия:"/>
                <Label Content="Отчество:"/>
                <Label Content="Дата рождения:"/>
                <Label Content="Номер телефона:"/>
                <Button Margin="0,5" Click="Button_Click_4">Изменить</Button>
                <Button Margin="0,2" Click="Button_Click_5">Сбросить</Button>
            </StackPanel>
            <StackPanel Width="135">
                <TextBox Text="{Binding CurrentPacient.Name}"  Margin="0,5"></TextBox>
                <TextBox Text="{Binding CurrentPacient.LastName}"  Margin="0,3"></TextBox>
                <TextBox Text="{Binding CurrentPacient.MiddleName}"  Margin="0,5"></TextBox>
                <DatePicker SelectedDate="{Binding CurrentPacient.Birthday}" ></DatePicker>
                <TextBox Text="{Binding CurrentPacient.PhoneNumber}"  Margin="0,5"></TextBox>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
