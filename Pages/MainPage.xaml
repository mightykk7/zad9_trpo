<Page x:Class="Zad8_trpo.Pages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Zad8_trpo.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="120"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10">
            <StackPanel>
                <Label Content="Имя:" HorizontalAlignment="Left"/>
                <Label Content="Фамилия:" HorizontalAlignment="Left"/>
                <Label Content="Отчество:" HorizontalAlignment="Left"/>
                <Label Content="Специальность:" HorizontalAlignment="Left"/>
            </StackPanel>
            <StackPanel>
                <TextBlock Margin="0,5" Text="{Binding CurrentDoctor.Name}"/>
                <TextBlock Margin="0,5" Text="{Binding CurrentDoctor.LastName}"/>
                <TextBlock Margin="0,5" Text="{Binding CurrentDoctor.MiddleName}"/>
                <TextBlock Margin="0,5" Text="{Binding CurrentDoctor.Specialisation}"/>
            </StackPanel>
        </StackPanel>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <ListView Grid.Column="0"
                  Margin="10"
                  ItemsSource="{Binding Pacients}"
                  SelectedItem="{Binding SelectedPacient}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Margin="5">
                            <TextBlock Text="{Binding LastName}" FontWeight="Bold"/>
                            <TextBlock Text="{Binding Name}"/>
                            <TextBlock Text="{Binding MiddleName}"/>
                            <TextBlock Text="{Binding Birthday, StringFormat='{}{0:dd.MM.yyyy}'}"/>
                            <TextBlock Text="{Binding PhoneNumber}"/>
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <StackPanel Grid.Column="1" Margin="5" VerticalAlignment="Top">
                <Button Content="Создать пациента" Height="30" Margin="0,5" Click="Button_Click"/>
                <Button Content="Начать прием" Height="30" Margin="0,5" Click="Button_Click_1"/>
                <Button Content="Изменить информацию" Height="30" Margin="0,5" Click="Button_Click_2"/>
            </StackPanel>
        </Grid>
    </Grid>
</Page>
