<Page x:Class="Zad8_trpo.Pages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Zad8_trpo.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="120"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Style="{StaticResource StackPanelHorizontal}">
            <StackPanel Style="{StaticResource StackPanelVertical}">
                <Label Content="Имя:" Style="{StaticResource LabelWithMargin}"/>
                <Label Content="Фамилия:" Style="{StaticResource LabelWithMargin}"/>
                <Label Content="Отчество:" Style="{StaticResource LabelWithMargin}"/>
                <Label Content="Специальность:"  Style="{StaticResource LabelWithMargin}"/>
            </StackPanel>
            <StackPanel Style="{StaticResource StackPanelVertical}">
                <TextBlock Text="{Binding CurrentDoctor.Name}" Style="{StaticResource TextBlockWithMargin}"/>
                <TextBlock Text="{Binding CurrentDoctor.LastName}" Style="{StaticResource TextBlockWithMargin}"/>
                <TextBlock Text="{Binding CurrentDoctor.MiddleName}" Style="{StaticResource TextBlockWithMargin}"/>
                <TextBlock Text="{Binding CurrentDoctor.Specialisation}" Style="{StaticResource TextBlockWithMargin}"/>
            </StackPanel>
        </StackPanel>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <ListView Grid.Column="0"
                  ItemsSource="{Binding Pacients}"
                  SelectedItem="{Binding SelectedPacient}"
                  Style="{StaticResource ListViewBackground}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Style="{StaticResource StackPanelVertical}">
                            <TextBlock Text="{Binding LastName}" FontWeight="Bold" Style="{StaticResource TextBlockWithMargin}"/>
                            <TextBlock Text="{Binding Name}" Style="{StaticResource TextBlockWithMargin}"/>
                            <TextBlock Text="{Binding MiddleName}" Style="{StaticResource TextBlockWithMargin}"/>
                            <TextBlock Text="{Binding Birthday, StringFormat='{}{0:dd.MM.yyyy}'}" Style="{StaticResource TextBlockWithMargin}"/>
                            <TextBlock Text="{Binding PhoneNumber}" Style="{StaticResource TextBlockWithMargin}"/>
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <StackPanel Grid.Column="1" VerticalAlignment="Top" Style="{StaticResource StackPanelVertical}">
                <Button Content="Создать пациента" Click="Button_Click" Style="{StaticResource AddButton}"/>
                <Button Content="Начать прием" Click="Button_Click_1" Style="{StaticResource StandardButton}"/>
                <Button Content="Изменить информацию" Click="Button_Click_2" Style="{StaticResource StandardButton}"/>
            </StackPanel>
        </Grid>
    </Grid>
</Page>