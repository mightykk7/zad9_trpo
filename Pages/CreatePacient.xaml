<Page x:Class="Zad8_trpo.Pages.CreatePacient"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Zad8_trpo.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CreatePacient">

    <Grid>
        <StackPanel Orientation="Horizontal">
            <StackPanel>
                <Label Content="Имя:"/>
                <Label Content="Фамилия:"/>
                <Label Content="Отчество:"/>
                <Label Content="Дата рождения:"/>
                <Label Content="Номер телефона:"/>
                <Button Click="Button_Click_2">Добавить пациента</Button>
            </StackPanel>
            <StackPanel Width="120">
                <TextBox Margin="0,5" Text="{Binding CurrentPacient.Name}"></TextBox>
                <TextBox Margin="0,3" Text="{Binding CurrentPacient.LastName}"></TextBox>
                <TextBox Margin="0,5" Text="{Binding CurrentPacient.MiddleName}"></TextBox>
                <DatePicker SelectedDate="{Binding CurrentPacient.Birthday}" ></DatePicker>
                <TextBox Margin="0,5" Text="{Binding CurrentPacient.PhoneNumber}"></TextBox>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
