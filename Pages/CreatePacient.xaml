<Page x:Class="Zad8_trpo.Pages.CreatePacient"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Zad8_trpo.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Создать пациента">

    <Grid>
        <StackPanel Style="{StaticResource StackPanelHorizontal}">
            <StackPanel Style="{StaticResource StackPanelVertical}">
                <Label Content="Имя:" Style="{StaticResource LabelWithMargin}"/>
                <Label Content="Фамилия:" Style="{StaticResource LabelWithMargin}"/>
                <Label Content="Отчество:" Style="{StaticResource LabelWithMargin}"/>
                <Label Content="Дата рождения:" Style="{StaticResource LabelWithMargin}"/>
                <Label Content="Номер телефона:" Style="{StaticResource LabelWithMargin}"/>
                <Button Click="Button_Click_2" Style="{StaticResource AddButton}">Добавить пациента</Button>
                <Button Content="Назад" Style="{StaticResource BackButton}" Click="Button_Click"/>
            </StackPanel>
            <StackPanel Width="200" Style="{StaticResource StackPanelVertical}">
                <TextBox Text="{Binding CurrentPacient.Name}" Style="{StaticResource TextBoxWithMargin}"/>
                <TextBox Text="{Binding CurrentPacient.LastName}" Style="{StaticResource TextBoxWithMargin}"/>
                <TextBox Text="{Binding CurrentPacient.MiddleName}" Style="{StaticResource TextBoxWithMargin}"/>
                <DatePicker SelectedDate="{Binding CurrentPacient.Birthday}" Style="{StaticResource DatePickerWithMargin}"/>
                <TextBox Text="{Binding CurrentPacient.PhoneNumber}" Style="{StaticResource TextBoxWithMargin}"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>