<Page x:Class="Zad8_trpo.Pages.StartReceiving"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Zad8_trpo.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="StartReceiving">

    <Grid>
        <StackPanel Orientation="Horizontal">
            <StackPanel>
                <Label Content="Имя:"/>
                <Label Content="Фамилия:"/>
                <Label Content="Отчество:"/>
                <Label Content="Дата рождения:"/>
                <Label Content="Номер телефона:"/>
                <Label Content="Последнее посещение:"/>
                <Label Content="Последний доктор:"/>
                <Label Content="Диагноз:"/>
                <Label Content="Рекомендации:"/>
                <Button Click="Button_Click_6">Записать</Button>
            </StackPanel>
            <StackPanel Width="135">
                <TextBox Margin="0,5" Text="{Binding EnterPacient.Name}" IsEnabled="False"/>
                <TextBox Margin="0,3" Text="{Binding EnterPacient.LastName}" IsEnabled="False"/>
                <TextBox Margin="0,3" Text="{Binding EnterPacient.MiddleName}" IsEnabled="False"/>
                <DatePicker Margin="0,3" SelectedDate="{Binding EnterPacient.Birthday}" IsEnabled="False"/>
                <TextBox Margin="0,3" Text="{Binding EnterPacient.PhoneNumber}" IsEnabled="False"/>
                <DatePicker Margin="0,1" SelectedDate="{Binding EnterPacient.LastAppointment}"/>
                <TextBox  Margin="0,4" Text="{Binding EnterPacient.LastDoctor}" IsEnabled="False"/>
                <TextBox Margin="0,3" Text="{Binding EnterPacient.Diagnosis}"/>
                <TextBox Margin="0,3" Text="{Binding EnterPacient.Recomendations}"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
