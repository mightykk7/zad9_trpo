<Page x:Class="Zad8_trpo.Pages.Page1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Zad8_trpo.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page1" Background="{DynamicResource WindowBackground}">

    <Grid>
        <StackPanel Orientation="Horizontal" Margin="5">
            <StackPanel>
                <Label Content="ID:" Style="{DynamicResource LabelWithMargin}"/>
                <Label Content="Пароль:" Style="{DynamicResource LabelWithMargin}"/>
                <Button Margin="5" Click="Button_Click_1"  Style="{StaticResource StandardButton}">Войти</Button>
                <Button Margin="5" Click="Button_Click"  Style="{StaticResource StandardButton}">Зарегистрироваться</Button>
            </StackPanel>
            <StackPanel Width="200">
                <TextBox Margin="0,5" Text="{Binding EnterDoctor.Id}" Style="{StaticResource TextBoxWithMargin}"/>
                <TextBox Margin="0,5" Text="{Binding EnterDoctor.Password}" Style="{StaticResource TextBoxWithMargin}"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
