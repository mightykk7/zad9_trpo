<Page x:Class="Zad8_trpo.Pages.Page1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Zad8_trpo.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page1">

    <Grid>
        <StackPanel Style="{StaticResource StackPanelHorizontal}">
            <StackPanel Style="{StaticResource StackPanelVertical}">
                <Label Content="ID:" Style="{StaticResource LabelWithMargin}"/>
                <Label Content="Пароль:" Style="{StaticResource LabelWithMargin}"/>
                <Button Click="Button_Click_1" Style="{StaticResource StandardButton}">Войти</Button>
                <Button Click="Button_Click" Style="{StaticResource StandardButton}">Зарегистрироваться</Button>
            </StackPanel>
            <StackPanel Width="200" Style="{StaticResource StackPanelVertical}">
                <TextBox Text="{Binding EnterDoctor.Id}" Style="{StaticResource TextBoxWithMargin}"/>
                <TextBox Text="{Binding EnterDoctor.Password}" Style="{StaticResource TextBoxWithMargin}"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>