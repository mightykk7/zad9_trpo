<Page x:Class="Zad8_trpo.Pages.Register"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Zad8_trpo.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Register">

    <Grid>
        <StackPanel Orientation="Horizontal" Margin="5">
            <StackPanel>
                <Label Content="Имя:"/>
                <Label Content="Фамилия:"/>
                <Label Content="Отчество:"/>
                <Label Content="Специальность:"/>
                <Label Content="Пароль:"/>
                <Label Content="Подтверждение пароля:"/>
                <Button Margin="5" Click="Button_Click">Зарегистрироваться</Button>
            </StackPanel>
            <StackPanel Width="200">
                <TextBox Margin="0,3" Text="{Binding CurrentDoctor.Name}"/>
                <TextBox Margin="0,5" Text="{Binding CurrentDoctor.LastName}"/>
                <TextBox Margin="0,5" Text="{Binding CurrentDoctor.MiddleName}"/>
                <TextBox Margin="0,3" Text="{Binding CurrentDoctor.Specialisation}"/>
                <TextBox Margin="0,5" Text="{Binding CurrentDoctor.Password}"/>
                <TextBox Margin="0,5" Text="{Binding CurrentDoctor.PasswordConfirm}"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
