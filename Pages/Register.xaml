<Page x:Class="Zad8_trpo.Pages.Register"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Zad8_trpo.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Register">

    <Grid>
        <StackPanel Style="{StaticResource StackPanelHorizontal}">
            <StackPanel Style="{StaticResource StackPanelVertical}">
                <Label Content="Имя:" Style="{StaticResource LabelWithMargin}"/>
                <Label Content="Фамилия:" Style="{StaticResource LabelWithMargin}"/>
                <Label Content="Отчество:" Style="{StaticResource LabelWithMargin}"/>
                <Label Content="Специальность:" Style="{StaticResource LabelWithMargin}"/>
                <Label Content="Пароль:" Style="{StaticResource LabelWithMargin}"/>
                <Label Content="Подтверждение пароля:" Style="{StaticResource LabelWithMargin}"/>
                <Button Click="Button_Click" Style="{StaticResource AddButton}">Зарегистрироваться</Button>
                <Button Content="Назад" Style="{StaticResource BackButton}" Click="Button_Click_1"/>
            </StackPanel>
            <StackPanel Width="200" Style="{StaticResource StackPanelVertical}">
                <TextBox Text="{Binding CurrentDoctor.Name}" Style="{StaticResource TextBoxWithMargin}"/>
                <TextBox Text="{Binding CurrentDoctor.LastName}" Style="{StaticResource TextBoxWithMargin}"/>
                <TextBox Text="{Binding CurrentDoctor.MiddleName}" Style="{StaticResource TextBoxWithMargin}"/>
                <TextBox Text="{Binding CurrentDoctor.Specialisation}" Style="{StaticResource TextBoxWithMargin}"/>
                <TextBox Text="{Binding CurrentDoctor.Password}" Style="{StaticResource TextBoxWithMargin}"/>
                <TextBox Text="{Binding CurrentDoctor.PasswordConfirm}" Style="{StaticResource TextBoxWithMargin}"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>